@model RecipeApp.Models.DishTypeViewModel

@{
    ViewData["Title"] = "List of recipes";
}

<h1>List of recipes</h1>

<p>
    <a asp-action="Create">Add new recipe</a>
</p>
<form asp-controller="Recipes" asp-action="Index" method="get">
    <p>
        <select asp-for="DishType" asp-items="Model.DishTypes">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipes![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes![0].Author)
            </th>
            <th>
                Dish type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes![0].Ingridients)
            </th>
            <th>
                Vegan
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipes!) {
        <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingridients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVegan)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
